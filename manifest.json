{
    "name": "Tab Media Switcher",
    "version": "1.0",
    "description": "Switch media for chrome tabs.",
    "browser_action": {
        "default_popup": "html/popup.html"
    },
    "options_page": "html/options.html",
    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },
    "permissions": [
        "tabs",
        "activeTab",
        "audioCapture",
        "videoCapture"
    ],
    "manifest_version": 2
 }
